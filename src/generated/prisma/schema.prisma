generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                Int                 @id @default(autoincrement())
  name              String
  brandId           Int?                @map("brand_id")
  Brand             Brand?              @relation(fields: [brandId], references: [id], onDelete: Cascade)
  itemCode          String              @map("item_code")
  price             Float?
  stock             Int?
  categoryId        Int?                @map("category_id")
  Category          Category?           @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  benefitId         Int?                @map("benefit_id")
  Benefit           Benefit?            @relation(fields: [benefitId], references: [id], onDelete: Cascade)
  imageId           Int?                @map("image_id")
  imageUrl          String?             @map("image_url")
  CalculationData   CalculationData[]
  Ratings           Ratings[]
  ItemRecomendation ItemRecomendation[]
  BundlingItem      BundlingItem[]
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")

  @@map("product")
}

model Benefit {
  id             Int              @id @default(autoincrement())
  name           String
  Product        Product[]
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  BundleCategory BundleCategory[]

  @@map("benefit")
}

model Category {
  id             Int              @id @default(autoincrement())
  name           String
  Product        Product[]
  BundleCategory BundleCategory[]
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  @@map("category")
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String
  Product   Product[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("brand")
}

model CalculationData {
  id          Int      @id @default(autoincrement())
  transaction String
  productId   Int      @map("product_id")
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  value       Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("calculation_data")
}

model Users {
  id          Int           @id @default(autoincrement())
  name        String
  username    String
  password    String
  role        String        @default("user")
  address     String
  phone       String
  Ratings     Ratings[]
  Transaction Transaction[]
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("users")
}

model BundleCategory {
  id         Int      @id @default(autoincrement())
  categoryId Int      @map("category_id")
  Category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  benefitId  Int      @map("benefit_id")
  Benefit    Benefit  @relation(fields: [benefitId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("bundle_category")
}

model Ratings {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  Users     Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int      @map("product_id")
  Product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  rating    Int
  review    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("ratings")
}

model Image {
  id        Int      @id @default(autoincrement())
  image     String
  imageUrl  String   @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("image")
}

model ItemRecomendation {
  id        Int      @id @default(autoincrement())
  productId Int      @map("product_id")
  Product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("item_recomendation")
}

model BundlingItem {
  id              Int             @id @default(autoincrement())
  bundlingPackId  Int             @map("bundling_pack_id")
  BundlingPackage BundlingPackage @relation(fields: [bundlingPackId], references: [id], onDelete: Cascade)
  productId       Int             @map("product_id")
  Product         Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  @@map("bundling_item")
}

model BundlingPackage {
  id           Int            @id @default(autoincrement())
  benefit      String
  price        Float
  BundlingItem BundlingItem[]
  Transaction  Transaction[]
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  @@map("bundling_package")
}

model Transaction {
  id              Int             @id @default(autoincrement())
  userId          Int             @map("user_id")
  Users           Users           @relation(fields: [userId], references: [id], onDelete: Cascade)
  bundlingPackId  Int             @map("bundling_pack_id")
  BundlingPackage BundlingPackage @relation(fields: [bundlingPackId], references: [id], onDelete: Cascade)
  totalPrice      Float           @map("total_price")
  paymentStatus   String          @map("payment_status")
  orderNumber     String          @map("order_number")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  @@map("transaction")
}
